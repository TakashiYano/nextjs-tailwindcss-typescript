{
  "name": "nextjs-tailwindcss-typescript",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "fix": "run-s -l -c fix:tailwind fix:eslint fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "fix:tailwind": "rustywind --write src",
    "test": "run-p -l -c --aggregate-output lint:* unit",
    "unit": "jest"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "yarn fix"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint:eslint",
      "yarn lint:prettier",
      "yarn unit --bail --findRelatedTests"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "dependencies": {
    "classcat": "5.0.3",
    "next": "12.0.8-canary.12",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@testing-library/react": "12.1.2",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.15",
    "@types/react": "17.0.37",
    "@typescript-eslint/eslint-plugin": "5.8.0",
    "@typescript-eslint/parser": "5.8.0",
    "autoprefixer": "10.4.0",
    "babel-jest": "27.4.5",
    "eslint": "8.5.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.27.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.4.5",
    "jest-watch-typeahead": "1.0.0",
    "lint-staged": "12.1.3",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.5",
    "prettier": "2.5.1",
    "rustywind": "^0.12.2",
    "simple-git-hooks": "^2.7.0",
    "tailwindcss": "3.0.7",
    "typescript": "4.5.4"
  }
}
